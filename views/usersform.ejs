<div class="container-fluid justify-content-between align-items-center mb-3">
	<h2><%= title %></h2>
</div>

<form action="<%= formAction %>" method="<%= method %>" class="mb-4">
	<% if (method === "POST" && formAction.includes("_method=PUT")) { %>
	<input type="hidden" name="_method" value="PUT" />
	<% } %>

	<div class="row g-2">
		<div class="col-md-4">
			<input
				type="text"
				name="firstName"
				class="form-control"
				placeholder="First Name"
				value="<%= user.firstName || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="middleName"
				class="form-control"
				placeholder="Middle Name"
				value="<%= user.middleName || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="lastName"
				class="form-control"
				placeholder="Last Name"
				value="<%= user.lastName || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input type="text" name="role" class="form-control" placeholder="Role" value="<%= user.role || '' %>" />
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="department"
				class="form-control"
				placeholder="Department"
				value="<%= user.department || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="educationLevel"
				class="form-control"
				placeholder="Education Level"
				value="<%= user.educationLevel || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="specialization"
				class="form-control"
				placeholder="Specialization"
				value="<%= user.specialization || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input type="text" name="phone" class="form-control" placeholder="Phone" value="<%= user.phone || '' %>" />
		</div>
		<div class="col-md-4">
			<input type="text" name="address" class="form-control" placeholder="Address" value="<%= user.address || '' %>" />
		</div>
		<div class="col-md-4">
			<input type="text" name="region" class="form-control" placeholder="Region" value="<%= user.region || '' %>" />
		</div>
		<div class="col-md-4">
			<input type="text" name="city" class="form-control" placeholder="City" value="<%= user.city || '' %>" />
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="nationality"
				class="form-control"
				placeholder="Nationality"
				value="<%= user.nationality || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="dateOfBirth"
				class="form-control"
				placeholder="Date Of Birth"
				value="<%= user.dateOfBirth || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input type="text" name="gender" class="form-control" placeholder="Gender" value="<%= user.gender || '' %>" />
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="maritalStatus"
				class="form-control"
				placeholder="Marital Status"
				value="<%= user.maritalStatus || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="nationalId"
				class="form-control"
				placeholder="National ID"
				value="<%= user.nationalId || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="socialSecurityNumber"
				class="form-control"
				placeholder="Social Security Number"
				value="<%= user.socialSecurityNumber || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="militaryServiceStatus"
				class="form-control"
				placeholder="Military Service Status"
				value="<%= user.militaryServiceStatus || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<input
				type="text"
				name="personalEmail"
				class="form-control"
				placeholder="Personal Email"
				value="<%= user.personalEmail || '' %>"
			/>
		</div>
		<div class="col-md-4">
			<button type="submit" class="btn btn-primary w-100">Submit</button>
		</div>
	</div>
</form>

<div class="d-flex justify-content-between align-items-center mb-3">
	<a href="<%= backUrl || '/users' %>" class="btn btn-secondary">Back</a>
</div>
